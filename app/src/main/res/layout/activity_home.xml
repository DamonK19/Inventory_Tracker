<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <TextView
        android:id="@+id/txtInventory"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center_horizontal"
        android:text="Inventory"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="11dp" />

    <Button
        android:id="@+id/btnViewInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View" />

    <TextView
        android:id="@+id/txtRecipesAvailable"
        android:layout_width="388dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_horizontal"
        android:text="Recipes"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="370dp" />

    <Button
        android:id="@+id/btnViewAvailableRecipes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Available" />

    <Button
        android:id="@+id/btnViewLibrary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Library"
        tools:layout_editor_absoluteX="249dp"
        tools:layout_editor_absoluteY="640dp" />

</LinearLayout>